{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022"], // Support latest LTS ES features
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    // "module": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
